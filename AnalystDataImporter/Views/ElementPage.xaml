<Page x:Class="AnalystDataImporter.Views.ElementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:globals="clr-namespace:AnalystDataImporter.Globals"
      xmlns:local="clr-namespace:AnalystDataImporter"
      Title="ElementPage">

    <!-- Hlavní kontejner pro obsah stránky -->
    <Grid>
        <!-- Definice řádků mřížky -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Automatická výška pro první řádek -->
            <RowDefinition Height="*" />
            <!-- Zbývající prostor pro druhý řádek -->
        </Grid.RowDefinitions>

        <StackPanel>
            <!-- Tlačítko pro přidání prvku -->
            <Button Content="Add Element"
            Width="100"
            Margin="10" />

            <!-- Seznam pro zobrazení přidaných prvků -->
            <ListBox Width="300" Height="400">
                <!--ItemsSource="{Binding Source={x:Static globals:GlobalObjectManager.Instance}, Path=Elements}"-->

                <ListBox.ItemTemplate>
                    <!-- Šablona pro zobrazení jednotlivých prvků v seznamu -->
                    <DataTemplate>
                        <TextBlock Text="{Binding Label}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Page>